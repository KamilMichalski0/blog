---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

type Props = CollectionEntry<'blog'>['data'] & {
  url?: string;
  relatedPosts?: CollectionEntry<'blog'>[];
};

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  heroImageAlt,
  author = 'ClaudeCodeLab',
  readingTime,
  category,
  url,
  relatedPosts = []
} = Astro.props;

const formattedDate = new Date(pubDate).toLocaleDateString('pl-PL', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdatedDate = updatedDate ? new Date(updatedDate).toLocaleDateString('pl-PL', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}) : null;

// Schema.org structured data
const currentUrl = url || Astro.url.pathname;
const fullUrl = new URL(currentUrl, Astro.site).toString();
const imageUrl = heroImage ? new URL(heroImage.startsWith('http') ? heroImage : heroImage, Astro.site).toString() : null;

const schema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": description || title,
  "image": imageUrl,
  "datePublished": pubDate.toISOString(),
  "dateModified": (updatedDate || pubDate).toISOString(),
  "author": {
    "@type": "Person",
    "name": author,
    "url": new URL('/', Astro.site).toString()
  },
  "publisher": {
    "@type": "Organization",
    "name": "ClaudeCodeLab",
    "url": new URL('/', Astro.site).toString(),
    "logo": {
      "@type": "ImageObject",
      "url": new URL('/logo.png', Astro.site).toString()
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": fullUrl
  }
};
---

<BaseLayout title={title} description={description} type="article" publishDate={pubDate}>
  <!-- Schema.org JSON-LD -->
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  </Fragment>
  <article class="relative">
    <!-- Hero Image -->
    {heroImage ? (
      <div class="relative w-full h-[50vh] md:h-[60vh] overflow-hidden bg-gray-900">
        <img
          src={heroImage}
          alt={heroImageAlt || `${title} - ClaudeCodeLab`}
          class="w-full h-full object-cover"
        />
        <!-- Gradient overlay for better text readability -->
        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>

        <!-- Title overlay on hero -->
        <div class="absolute bottom-0 left-0 right-0 container-content pb-12 md:pb-16">
          <div class="max-w-4xl">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-white mb-4 leading-tight">
              {title}
            </h1>
            <div class="flex flex-wrap items-center gap-4 text-white/90">
              <time class="flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                {formattedDate}
              </time>
              <span>â€¢</span>
              <span class="flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                {readingTime || 5} min czytania
              </span>
            </div>
          </div>
        </div>
      </div>
    ) : (
      <!-- Alternative header if no hero image -->
      <div class="relative overflow-hidden" style="background: var(--gradient-hero);">
        <!-- Pattern overlay -->
        <div class="absolute inset-0 opacity-10">
          <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, white 1px, transparent 0); background-size: 40px 40px;"></div>
        </div>

        <div class="relative container-content py-16 md:py-24">
          <div class="max-w-4xl">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-white mb-6 leading-tight">
              {title}
            </h1>
            <div class="flex flex-wrap items-center gap-4 text-white/90">
              <time class="flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                {formattedDate}
              </time>
              <span>â€¢</span>
              <span class="flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                {readingTime || 5} min czytania
              </span>
            </div>
          </div>
        </div>
      </div>
    )}

    <!-- Article Content -->
    <div class="py-12 md:py-16 bg-gray-50 dark:bg-gray-950">
      <div class="prose max-w-4xl mx-auto px-6">
        <!-- Breadcrumbs -->
        <Breadcrumbs title={title} category={category} />

        <!-- Description/Lead -->
        {description && (
          <p class="text-xl md:text-2xl text-black dark:text-gray-400 font-medium leading-relaxed mb-12 border-l-4 pl-6" style="border-color: rgb(var(--color-accent));">
            {description}
          </p>
        )}

        <!-- Updated date notice -->
        {formattedUpdatedDate && (
          <div class="flex items-center gap-2 px-4 py-3 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg mb-8 text-sm">
            <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-blue-900 dark:text-blue-100">
              Ostatnia aktualizacja: <strong>{formattedUpdatedDate}</strong>
            </span>
          </div>
        )}

        <!-- Main content slot -->
        <div class="prose-content">
          <slot />
        </div>
      </div>
    </div>

    <!-- Author card / Share section -->
    <div class="bg-gradient-to-b from-gray-50 to-white dark:from-gray-900 dark:to-gray-950 py-12">
      <div class="container-content">
        <div class="max-w-4xl mx-auto">
          <div class="card p-8">
            <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-6">
              <div class="flex-1">
                <h3 class="text-xl font-bold text-black dark:text-white mb-2">
                  PodobaÅ‚ Ci siÄ™ ten tutorial?
                </h3>
                <p class="text-black dark:text-gray-300">
                  Podziel siÄ™ nim ze znajomymi i kolegami, ktÃ³rym moÅ¼e siÄ™ przydaÄ‡!
                </p>
              </div>

              <div class="flex gap-3">
                <button class="p-3 rounded-lg bg-blue-100 dark:bg-blue-900/50 text-blue-600 dark:text-blue-400 hover:bg-blue-200 dark:hover:bg-blue-900 transition-colors" title="Share on Twitter">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
                  </svg>
                </button>
                <button class="p-3 rounded-lg bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors" title="Share on LinkedIn">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
                  </svg>
                </button>
                <button class="p-3 rounded-lg bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors" title="Copy link">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                  </svg>
                </button>
              </div>
            </div>
          </div>

          <!-- Related Posts -->
          {relatedPosts.length > 0 && (
            <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-800">
              <h3 class="text-2xl font-bold text-black dark:text-white mb-6">
                ðŸ“š PowiÄ…zane ArtykuÅ‚y
              </h3>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                {relatedPosts.map((relatedPost) => (
                  <a
                    href={`/blog/${relatedPost.id}`}
                    class="card p-4 hover:shadow-2xl transition-all duration-300 group"
                  >
                    <h4 class="font-semibold text-black dark:text-white mb-2 group-hover:text-[rgb(var(--color-accent))] transition-colors line-clamp-2">
                      {relatedPost.data.title}
                    </h4>
                    {relatedPost.data.description && (
                      <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-2">
                        {relatedPost.data.description}
                      </p>
                    )}
                    <div class="mt-3 flex items-center text-sm text-[rgb(var(--color-accent))]">
                      <span>Czytaj wiÄ™cej</span>
                      <svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          )}

          <!-- Navigation to all posts -->
          <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-800">
            <div class="flex flex-col sm:flex-row justify-between gap-4">
              <a href="/blog" class="group inline-flex items-center text-[rgb(var(--color-accent))] font-semibold hover:text-[rgb(var(--color-accent-dark))]">
                <svg class="w-5 h-5 mr-2 transform group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                WrÃ³Ä‡ do wszystkich tutoriali
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  @reference "tailwindcss";

  /* Enhanced prose styles */
  .prose-content {
    @apply text-black dark:text-gray-200;
  }

  .prose-content :global(h2) {
    @apply text-3xl font-bold text-black dark:text-white mt-16 mb-6 pb-3 border-b-2 border-gray-200 dark:border-gray-800;
  }

  .prose-content :global(h3) {
    @apply text-2xl font-bold text-black dark:text-white mt-12 mb-4;
  }

  .prose-content :global(h4) {
    @apply text-xl font-bold text-black dark:text-white mt-8 mb-3;
  }

  .prose-content :global(p) {
    @apply text-lg leading-relaxed mb-6 text-black dark:text-gray-300;
  }

  .prose-content :global(a) {
    @apply underline decoration-2 underline-offset-2;
    color: rgb(var(--color-accent));
  }

  .prose-content :global(a:hover) {
    color: rgb(var(--color-accent-dark));
  }

  .prose-content :global(ul),
  .prose-content :global(ol) {
    @apply my-8 space-y-3 pl-6;
  }

  .prose-content :global(li) {
    @apply text-black dark:text-gray-300 leading-relaxed;
  }

  .prose-content :global(ul li) {
    @apply relative pl-2;
  }

  .prose-content :global(ul li::before) {
    content: "â€¢";
    @apply absolute -left-4 font-bold;
    color: rgb(var(--color-accent));
  }

  .prose-content :global(blockquote) {
    @apply border-l-4 pl-6 py-4 my-8 rounded-r-lg;
    border-color: rgb(var(--color-accent));
    background: var(--gradient-subtle);
  }

  .prose-content :global(blockquote p) {
    @apply text-black dark:text-gray-400 italic mb-0;
  }

  .prose-content :global(code) {
    @apply px-2 py-1 bg-gray-100 dark:bg-gray-800 rounded-md text-sm font-mono;
    color: rgb(var(--color-accent));
  }

  .prose-content :global(pre) {
    @apply p-6 rounded-xl overflow-x-auto my-8 bg-gray-900 dark:bg-black shadow-2xl;
  }

  .prose-content :global(pre code) {
    @apply text-gray-100 bg-transparent p-0;
  }

  .prose-content :global(img) {
    @apply rounded-xl shadow-2xl my-12 w-full;
  }

  .prose-content :global(table) {
    @apply w-full my-8 border-collapse;
  }

  .prose-content :global(th) {
    @apply bg-gray-100 dark:bg-gray-800 font-semibold text-left p-3 border border-gray-200 dark:border-gray-700;
  }

  .prose-content :global(td) {
    @apply p-3 border border-gray-200 dark:border-gray-700;
  }

  .prose-content :global(hr) {
    @apply my-12 border-0 border-t-2 border-gray-200 dark:border-gray-800;
  }
</style>
