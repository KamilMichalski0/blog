---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';
import BlogCard from '@/components/BlogCard.astro';

const posts = (await getCollection('blog'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Get featured post (most recent)
const featuredPost = posts[0];
const otherPosts = posts.slice(1);
---

<BaseLayout
  title="Blog - ClaudeCodeLab"
  description="Learn programming with AI-powered tutorials, cutting-edge development techniques, and expert guidance from Claude Code."
>
  <!-- Hero Section -->
  <section class="relative bg-gray-50 dark:bg-gray-950 overflow-hidden">
    <!-- Decorative elements - more subtle in light mode -->
    <div class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-br from-indigo-100/30 to-transparent dark:from-purple-900 rounded-full blur-3xl -mr-48 -mt-48"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-gradient-to-tr from-purple-100/30 to-transparent dark:from-indigo-900 rounded-full blur-3xl -ml-48 -mb-48"></div>

    <div class="relative container-content py-16 md:py-24">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center px-4 py-2 rounded-full bg-indigo-50 dark:bg-indigo-900/50 text-indigo-700 dark:text-indigo-300 font-semibold text-sm mb-6 border border-indigo-200 dark:border-indigo-800">
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"></path>
          </svg>
          AI-Powered Programming Tutorials
        </div>

        <h1 class="text-5xl md:text-6xl lg:text-7xl font-extrabold text-gray-900 dark:text-white mb-6">
          Learn by <span class="gradient-text">Building</span>
        </h1>

        <p class="text-xl md:text-2xl text-gray-700 dark:text-gray-300 max-w-3xl mx-auto mb-8 leading-relaxed">
          Dive into practical tutorials and guides that teach you to build real-world applications with modern technologies.
        </p>

        <!-- Search bar (visual only for now) -->
        <div class="max-w-2xl mx-auto">
          <div class="relative">
            <input
              type="search"
              placeholder="Search tutorials..."
              class="w-full px-6 py-4 pl-12 rounded-xl border-2 border-gray-300 dark:border-gray-700 bg-white/80 dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:border-indigo-500 dark:focus:border-indigo-400 focus:ring-2 focus:ring-indigo-500/20 transition-colors shadow-sm"
            />
            <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Post -->
  {featuredPost && (
    <section class="section bg-gray-50 dark:bg-gray-950">
      <div class="container-content">
        <div class="flex items-center gap-3 mb-8">
          <svg class="w-6 h-6 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
          </svg>
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white">Featured Tutorial</h2>
        </div>

        <a href={`/blog/${featuredPost.id}`} class="group block">
          <div class="card overflow-hidden hover:scale-[1.01]">
            <div class="grid md:grid-cols-2 gap-0">
              {featuredPost.data.heroImage ? (
                <div class="relative aspect-video md:aspect-auto overflow-hidden">
                  <img
                    src={featuredPost.data.heroImage}
                    alt={featuredPost.data.title}
                    class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t md:bg-gradient-to-r from-black/30 to-transparent"></div>
                </div>
              ) : (
                <div class="relative aspect-video md:aspect-auto bg-gradient-to-br from-indigo-500 via-purple-500 to-pink-500">
                  <div class="absolute inset-0 flex items-center justify-center">
                    <svg class="w-24 h-24 text-white/20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                    </svg>
                  </div>
                </div>
              )}

              <div class="p-8 md:p-12 flex flex-col justify-center bg-white dark:bg-gray-800">
                <div class="flex items-center gap-3 mb-4 text-sm text-gray-600 dark:text-gray-400 font-medium">
                  <time class="flex items-center">
                    <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    {new Date(featuredPost.data.pubDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                  </time>
                  <span>â€¢</span>
                  <span class="flex items-center">
                    <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    5 min read
                  </span>
                </div>

                <h3 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4 group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors">
                  {featuredPost.data.title}
                </h3>

                {featuredPost.data.description && (
                  <p class="text-lg text-gray-700 dark:text-gray-300 mb-6 leading-relaxed">
                    {featuredPost.data.description}
                  </p>
                )}

                {featuredPost.data.tags && featuredPost.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mb-6">
                    {featuredPost.data.tags.slice(0, 4).map(tag => (
                      <span class="badge badge-primary">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}

                <div class="flex items-center text-indigo-600 dark:text-indigo-400 font-bold text-lg">
                  Read full tutorial
                  <svg class="w-6 h-6 ml-2 transform group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </div>
              </div>
            </div>
          </div>
        </a>
      </div>
    </section>
  )}

  <!-- All Posts Grid -->
  <section class="section bg-gray-50 dark:bg-gray-900">
    <div class="container-content">
      <div class="flex items-center justify-between mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white">
          All <span class="gradient-text">Tutorials</span>
        </h2>
        <div class="flex items-center gap-2 text-gray-700 dark:text-gray-300 font-medium">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
          </svg>
          <span class="font-semibold">{posts.length} {posts.length === 1 ? 'post' : 'posts'}</span>
        </div>
      </div>

      {otherPosts.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {otherPosts.map((post, index) => (
            <div class="fade-in" style={`animation-delay: ${index * 50}ms`}>
              <BlogCard
                title={post.data.title}
                description={post.data.description}
                pubDate={post.data.pubDate}
                heroImage={post.data.heroImage}
                href={`/blog/${post.id}`}
                tags={post.data.tags}
                draft={post.data.draft}
              />
            </div>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-700 dark:text-gray-300 text-lg">
            No more posts available. Check back soon for new content!
          </p>
        </div>
      )}
    </div>
  </section>

  <!-- Newsletter CTA -->
  <section class="section bg-gray-50 dark:bg-gray-950">
    <div class="container-content">
      <div class="card bg-gradient-to-br from-indigo-500 via-purple-500 to-pink-500 overflow-hidden relative">
        <!-- Pattern overlay -->
        <div class="absolute inset-0 opacity-10">
          <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, white 1px, transparent 0); background-size: 40px 40px;"></div>
        </div>

        <div class="relative p-12 md:p-16 text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            Never Miss a Tutorial
          </h2>
          <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
            Get notified when we publish new tutorials and guides to help you level up your coding skills.
          </p>
          <div class="max-w-md mx-auto flex flex-col sm:flex-row gap-3">
            <input
              type="email"
              placeholder="your@email.com"
              class="flex-1 px-6 py-3 rounded-lg border-2 border-white/30 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-white focus:ring-2 focus:ring-white/20 transition-colors"
            />
            <button class="px-8 py-3 bg-white text-indigo-600 font-bold rounded-lg hover:bg-gray-100 transition-colors shadow-xl">
              Subscribe
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
