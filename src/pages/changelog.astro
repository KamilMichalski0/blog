---
import BaseLayout from '@/layouts/BaseLayout.astro';
import ChangelogItem from '@/components/ChangelogItem.astro';
import { getCollection } from 'astro:content';

const changelogEntries = (await getCollection('changelog'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout
  title="Changelog - ClaudeCodeLab"
  description="Track all updates, features, and improvements to ClaudeCodeLab"
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-indigo-50 via-white to-purple-50 dark:from-gray-950 dark:via-gray-900 dark:to-gray-950 overflow-hidden">
    <!-- Decorative elements -->
    <div class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-br from-purple-200 to-transparent dark:from-purple-900 rounded-full blur-3xl opacity-20 -mr-48 -mt-48"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-gradient-to-tr from-indigo-200 to-transparent dark:from-indigo-900 rounded-full blur-3xl opacity-20 -ml-48 -mb-48"></div>

    <div class="relative container-content py-16 md:py-24">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center px-4 py-2 rounded-full bg-indigo-100 dark:bg-indigo-900/50 text-indigo-700 dark:text-indigo-300 font-semibold text-sm mb-6 border border-indigo-200 dark:border-indigo-800">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
          Product Updates
        </div>

        <h1 class="text-5xl md:text-6xl lg:text-7xl font-extrabold text-gray-900 dark:text-white mb-6">
          <span class="gradient-text">Changelog</span>
        </h1>

        <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto mb-8 leading-relaxed">
          Track every feature, improvement, and fix. We're constantly evolving to provide you with the best learning experience.
        </p>

        <!-- Stats -->
        <div class="flex flex-wrap justify-center gap-8 mt-12">
          <div class="text-center">
            <div class="text-4xl font-bold text-indigo-600 dark:text-indigo-400 mb-1">
              {changelogEntries.length}
            </div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Updates</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-green-600 dark:text-green-400 mb-1">
              {changelogEntries.filter(e => e.data.type === 'feat').length}
            </div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Features</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-red-600 dark:text-red-400 mb-1">
              {changelogEntries.filter(e => e.data.type === 'fix').length}
            </div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Fixes</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Timeline Section -->
  <section class="section bg-gradient-to-b from-white to-gray-50 dark:from-gray-950 dark:to-gray-900">
    <div class="container-content">
      <div class="max-w-5xl mx-auto">
        {changelogEntries.length > 0 ? (
          <div class="relative">
            <!-- Timeline entries -->
            {changelogEntries.map((entry, index) => (
              <div class="fade-in" style={`animation-delay: ${index * 100}ms`}>
                <ChangelogItem
                  title={entry.data.title}
                  date={entry.data.date}
                  type={entry.data.type}
                  highlights={entry.data.highlights}
                  version={entry.data.version}
                />

                {entry.body && (
                  <div class="pl-8 pb-8 prose prose-lg dark:prose-invert max-w-none">
                    <div set:html={entry.body} />
                  </div>
                )}
              </div>
            ))}

            <!-- Timeline end marker -->
            <div class="relative pl-8 pb-4">
              <div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-gray-300 dark:bg-gray-700"></div>
              <p class="text-gray-500 dark:text-gray-500 italic">
                This is where it all began...
              </p>
            </div>
          </div>
        ) : (
          <div class="text-center py-16">
            <div class="w-24 h-24 mx-auto mb-6 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
              <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
              No Updates Yet
            </h3>
            <p class="text-lg text-gray-600 dark:text-gray-400">
              Check back soon for the latest features and improvements!
            </p>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Subscribe CTA -->
  <section class="section bg-white dark:bg-gray-950">
    <div class="container-content">
      <div class="max-w-4xl mx-auto">
        <div class="card bg-gradient-to-br from-indigo-500 via-purple-500 to-pink-500 overflow-hidden relative">
          <!-- Pattern overlay -->
          <div class="absolute inset-0 opacity-10">
            <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, white 1px, transparent 0); background-size: 40px 40px;"></div>
          </div>

          <div class="relative p-12 md:p-16 text-center">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
              Stay in the Loop
            </h2>
            <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
              Get notified about new features, improvements, and important updates delivered straight to your inbox.
            </p>
            <div class="max-w-md mx-auto flex flex-col sm:flex-row gap-3">
              <input
                type="email"
                placeholder="your@email.com"
                class="flex-1 px-6 py-3 rounded-lg border-2 border-white/30 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-white focus:ring-2 focus:ring-white/20 transition-colors"
              />
              <button class="px-8 py-3 bg-white text-indigo-600 font-bold rounded-lg hover:bg-gray-100 transition-colors shadow-xl">
                Subscribe
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>