---
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Design System Test</title>
  </head>
  <body class="p-8">
    <div class="container-content">
      <h1 class="text-4xl font-bold mb-8">Design System Components</h1>

      <!-- Typography Section -->
      <section class="section">
        <h2 class="text-3xl font-semibold mb-6">Typography</h2>
        <div class="space-y-4">
          <h1>Heading 1</h1>
          <h2>Heading 2</h2>
          <h3>Heading 3</h3>
          <h4>Heading 4</h4>
          <h5>Heading 5</h5>
          <h6>Heading 6</h6>
          <p>This is a paragraph with <strong>bold text</strong> and <a href="#">a link</a>.</p>
          <p>Inline <code>code snippet</code> example.</p>
          <blockquote>This is a blockquote with some inspiring text.</blockquote>
        </div>
      </section>

      <hr />

      <!-- Buttons Section -->
      <section class="section">
        <h2 class="text-3xl font-semibold mb-6">Buttons</h2>
        <div class="space-x-4 space-y-4">
          <button class="btn-primary">Primary Button</button>
          <button class="btn-secondary">Secondary Button</button>
          <button class="btn-ghost">Ghost Button</button>
          <button class="btn-primary" disabled>Disabled Button</button>
        </div>
      </section>

      <hr />

      <!-- Cards Section -->
      <section class="section">
        <h2 class="text-3xl font-semibold mb-6">Cards</h2>
        <div class="grid gap-6 md:grid-cols-2">
          <div class="card">
            <div class="card-header">
              <h3 class="text-xl font-semibold">Card Title</h3>
            </div>
            <div class="card-body">
              <p>This is the card body content. It can contain any type of content including text, images, and other components.</p>
            </div>
            <div class="card-footer">
              <button class="btn-primary">Action</button>
            </div>
          </div>

          <div class="card p-6">
            <h3 class="text-xl font-semibold mb-4">Simple Card</h3>
            <p class="text-gray-600 dark:text-gray-400">A simpler card without header/footer sections.</p>
          </div>
        </div>
      </section>

      <hr />

      <!-- Badges Section -->
      <section class="section">
        <h2 class="text-3xl font-semibold mb-6">Badges</h2>
        <div class="space-x-2">
          <span class="badge badge-primary">Primary</span>
          <span class="badge badge-success">Success</span>
          <span class="badge badge-warning">Warning</span>
          <span class="badge badge-danger">Danger</span>
        </div>
      </section>

      <hr />

      <!-- Dark Mode Toggle Test -->
      <section class="section">
        <h2 class="text-3xl font-semibold mb-6">Dark Mode Test</h2>
        <button
          onclick="document.documentElement.classList.toggle('dark')"
          class="btn-secondary"
        >
          Toggle Dark Mode
        </button>
        <p class="mt-4 text-gray-600 dark:text-gray-400">
          Click the button above to test dark mode styling.
        </p>
      </section>
    </div>
  </body>
</html>